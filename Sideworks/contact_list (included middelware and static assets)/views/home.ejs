<!-- <!DOCTYPE html> -->
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1>Contact List</h1>
    <div>
        <ul>
            <% for( let i of contact_list ) { %>
                <li>
                    <p>
                        <%= i.name %>
                    </p>
                    <p>
                        <%= i.phone %>
                    </p>
                </li>
                <% } %>
        </ul>
    </div>
    <form action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Enter Name" required id="">
        <input type="number" name="phone" placeholder="Enter Phone" required id="">

        <button type="submit"> Add Contact</button>
    </form>
    <form action="/delete-contact" method="POST">
        <button type="submit">Delete Contact</button>
    </form>
    <script type="text/javascript" src="/js.home.js"></script>
</body>

</html>